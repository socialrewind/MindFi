<UserControl x:Class="MBBeta1.Controls.DateFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lex="http://schemas.root-project.org/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="{lex:LocText MBBeta1:MBStrings:StartDate}"/>
            <DatePicker x:Name="StartDateDP" SelectedDateChanged="StartDateDP_SelectedDateChanged"/>
            <Label Content="{lex:LocText MBBeta1:MBStrings:EndDate}"/>
            <DatePicker x:Name="EndDateDP" SelectedDateChanged="EndDateDP_SelectedDateChanged"/>
        </StackPanel>
    </Grid>
</UserControl>
